{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "strictPropertyInitialization": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,    
    "rootDirs": ["src"],
    "baseUrl": "src",
    "outDir": "dist",
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src"],
}
